<!DOCTYPE html>
<html>
  <%- include('../partials/head'); -%>

<body>
    <%- include('../partials/nav'); -%>
    <form action="/happening" method="POST" id="new-form">
      <h2>Create a New Happening!</h2>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" />
      </div>
      <div class="form-group">
        <label for="first_hap">Start Your Story</label>
        <textarea type="text" name="first_hap"></textarea>
      </div>
      <div class="form-group-small">
        <label for="max_char">Maximum characters per snippet</label>
        <input type="number" name="max_char" min="1" max="500"/>
      </div>
      <div class="form-group-small">
        <label for="max_haps">How many snippets should your story have?</label>
        <input type="number" name="max_haps" min="1" max="25"/>
      </div>
      <input id="hidden-input-for-id" type="hidden" name="user_id" />
      <button class="submit-button">Create!</button>
    </form>
    <%- include('../partials/footer'); -%>
    <!-- lovely -->
    <script>
      populateHiddenInput()
    </script>
</body>